<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.scu.dao.UserDao">
    <insert id="insertOne">
        INSERT IGNORE INTO user (user_name, user_password_hash, user_password_salt)
        VALUES (#{userName},
                #{userPasswordHash},
                #{userPasswordSalt})
    </insert>

    <select id="selectByUserId" resultType="User">
        SELECT user_id,
               user_register_time,
               user_name,
               user_password_hash,
               user_password_salt,
               user_phone,
               user_phone
        FROM user
        WHERE user_id = #{userId}
    </select>

    <select id="selectByUserName" resultType="User">
        SELECT user_id,
               user_register_time,
               user_name,
               user_password_hash,
               user_password_salt
        FROM user
        WHERE user_name = #{userName}
    </select>

    <select id="selectCountByUserName" resultType="int">
        SELECT COUNT(user_id)
        FROM user
        WHERE user_name = #{userName}
    </select>

